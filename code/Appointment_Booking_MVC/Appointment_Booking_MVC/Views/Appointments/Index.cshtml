@using Appointment_Booking_MVC.Models
@model Appointment
@{
    ViewBag.Title = "Appointments";
}
<div class="card cardModify" id="Appoinments">
    <div class="card-body">
        <h1>Appointments</h1>
        <br />
        <p style="color:red">* Indicate Mandatory Field</p>
        <br />
        <br />
        @using (Html.BeginForm("SubmitData", "Appointments"))
        {
            @Html.ValidationSummary(true);
            <!--APatient Name-->
            <label><b>Patient Name: </b></label>
            @Html.TextBoxFor(x => x.Patient_Name, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Patient_Name, "*");
            <br />
            <br />
            <!--Date-->
            <label><b>Appointment Date: </b></label>
            @Html.EditorFor(x => x.Appointment_Date)
            @Html.ValidationMessageFor(x => x.Appointment_Date, "*");
            <br />
            <br />
            <!--With-->
            <label><b>Appointment With: </b></label>
            <select name="Doctor_Id" id="Doctor_Id">
                @foreach (Doctor doctor in (List<Doctor>)Session["Doctors"])
                {
                    <option value=@doctor.Doctor_Id>@doctor.Doctor_Name</option>
                }
            </select>
            <br />
            <br />
            <!--Time-->
            <label><b>Appointment Time: </b></label>
            if (Model.Doctor_Id == 16)
            {
                Model.Appointment_Time = "10:30 AM";
            }
            <br />
            <br />
            <input type="submit" value="submit" />
        }
        <!---Data-->
        <br />
        <br />
        <table>
            <thead>
                <tr>
                    <th>Appointment With</th>
                    <th>Appointment Date</th>
                    <th>Appointment Time</th>
                    <th>Patient Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Session["Appointments"] != null)
                    {
                        List<Appointment> appointments = (List<Appointment>)Session["Appointments"];
                        foreach (Appointment appointment in appointments)
                        {
                            <tr>
                                <td>@appointment.Doctor_Name</td>
                                <td>@Convert.ToDateTime(appointment.Appointment_Date).ToString("dd-MMM-yyyy")</td>
                                <td>@appointment.Appointment_Time</td>
                                <td>@appointment.Patient_Name</td>
                                <td><a href=@Url.Action("Confirmation",routeValues: new {id=appointment.Appointment_Id }) class="btn-danger">Delete</a></td>
                            </tr>
                        }
                    }
                }

            </tbody>
        </table>
    </div>
</div>
<div class="modal" tabindex="-1" role="dialog" id="ModalConfirmation">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are You Sure?</p>
            </div>
            <div class="modal-footer">
                <a href=@Url.Action("DeleteAppointment") class="btn btn-danger">Delete</a>
                <a href=@Url.Action("Index","Appointments") class="btn btn-secondary">Cancle</a>
            </div>
        </div>
    </div>
</div>
<script>
    @if(ViewBag.ConfirmationMessage!=null)
            {
                @Html.Raw(ViewBag.ConfirmationMessage);
    }
    @if(ViewBag.SuccessMessage != null)
    {
                @Html.Raw(ViewBag.SuccessMessage);
    }
    @if(ViewBag.ValidationMessage != null)
    {
                @Html.Raw(ViewBag.ValidationMessage);
    }
</script>






